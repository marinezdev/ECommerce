
@{
    ViewBag.Title = "Rastreo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="top-content">
    <br /><br /><br /><br />
    <div class=" bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm" style="border-top: 1px solid #e6e6e6; border-radius: 5px; background: linear-gradient(to right, #185a9d, #4927b0); color: #e6e6e6 ">
        <div class="row">
            <div class="col-sm-12 col-lg-12 m-lr-auto m-b-20 text-center">
                <h1 style="font-size: 22px; padding-bottom: 0px;">Numero de pedido: <strong> @ViewBag.Venta.Venta_Folio.FolioCompuesto</strong> </h1>
            </div>
            <div class="col-lg-5 text-center">
            </div>
            <div class="col-sm-2 col-lg-2 text-center">
                <a href="/Store" class="flex-c-m cl0 size-103 bg1 bor1 hov-btn2 p-lr-15 trans-04" onclick="javascript: window.print();">
                    <i class="fa fa-print" aria-hidden="true"></i>  &nbsp;&nbsp;  Imprimir
                </a>
            </div>
            <div class="col-lg-5 text-center">
            </div>
        </div>
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="bor15 col-sm-5" style="border-top: 1px solid #e6e6e6; border-radius: 5px; background: linear-gradient(to right, #f7f7f7, #f5f5f5); ">
                <div class="row">
                    <div class="col-sm-12 col-lg-12 m-lr-auto m-b-50">
                        <br />
                        <h1 style="font-size: 22px; color: #403f3f;" class="text-center"><strong> Resumen de compra </strong>  </h1>
                        <br />

                        <div class="flex-w  bor12 p-b-13" style="background-color: #e9ecef; padding: 20px;">

                            <div class="size-208">
                                <h1 style="font-size: 18px; padding-bottom: 20px; color: #403f3f;">Subtotal: </h1>
                            </div>

                            <div class="size-209">
                                <span class="mtext-110 cl2 text-right" id="SubTotal_">
                                    $@ViewBag.Venta.Venta.Total
                                </span>
                            </div>
                        </div>

                        <div class="flex-w  bor12 p-b-13" style="background-color: #ffffff; padding: 20px;">

                            <div class="size-208">
                                <h1 style="font-size: 18px; padding-bottom: 20px; color: #403f3f;">Envio: </h1>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="mtext-110 cl2" id="TotalEnvio_">
                                    $0.00
                                </p>
                            </div>
                        </div>

                        <div class="flex-w p-t-27 p-b-33" style="background-color: #e9ecef; padding: 20px;">
                            <div class="size-208">
                                <h1 style="font-size: 18px; padding-bottom: 20px; color: #403f3f;">Total: </h1>
                            </div>

                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2" id="Total_">
                                    $@ViewBag.Venta.Venta.Total
                                </span>
                            </div>
                        </div>

                        <br />
                        <h5 class="mtext-109 cl2 p-b-5 text-center">Entrega a domicilio</h5>
                        <div class="flex-w bor12 p-t-15 p-b-30">
                            <div class=" p-r-18 p-r-0-sm w-full-ssm">
                                <strong><label style="font-size: 16px; color: #222222;"><i class="fa fa-address-book"></i> Información del cliente</label></strong>
                                <p class="stext-111  p-t-2"><strong>Nombre: </strong> @ViewBag.Venta.Usuarios.Nombre @ViewBag.Venta.Usuarios.ApellidoPaterno @ViewBag.Venta.Usuarios.ApellidoMaterno</p>
                                <p class="stext-111  p-t-2"><strong>Correo electrónico: </strong> @ViewBag.Venta.Usuarios.Correo </p>
                                <p class="stext-111  p-t-2"><strong>Telefono: </strong> @ViewBag.Venta.Usuarios.Telefono - @ViewBag.Venta.Usuarios.TipoTelefono</p>
                                <hr />
                                <strong><label style="font-size: 16px; color: #222222;"><i class="fa fa-map-marker"></i> Dirección </label></strong>

                                <p class="stext-111  p-t-2">
                                    @ViewBag.Venta.Cat_Estados.Estado, @ViewBag.Venta.Cat_Poblacion.Poblacion, @ViewBag.Venta.Cat_Colonias.Colonia,
                                    @ViewBag.Venta.Cat_CP.CP, @ViewBag.Venta.Usuarios_Direcciones.Calle, @ViewBag.Venta.Usuarios_Direcciones.NumExterior,
                                    @if (ViewBag.Venta.Usuarios_Direcciones.NumInteriror.Length > 0)
                                    {
                                        @ViewBag.Venta.Usuarios_Direcciones.NumInteriror <span>, </span>
                                    }
                                    @if (ViewBag.Venta.Usuarios_Direcciones.EntreCalles.Length > 0)
                                    {
                                        @ViewBag.Venta.Usuarios_Direcciones.EntreCalles <span>, </span>
                                    }
                                    @if (ViewBag.Venta.Usuarios_Direcciones.Referencias.Length > 0)
                                    {
                                        @ViewBag.Venta.Usuarios_Direcciones.Referencias <span>, </span>
                                    }
                                </p>

                                @if (ViewBag.Venta.Usuarios_Direcciones.RecibirPedido > 0)
                                {
                                    <p class="stext-111  p-t-2"><strong>Persona quien recibirá el pedido: </strong> </p>
                                    <p class="stext-111  p-t-2"><strong>Nombre: </strong> @ViewBag.Venta.Usuarios_Direcciones.Recibe_Nombre @ViewBag.Venta.Usuarios_Direcciones.Recibe_Apellidos </p>
                                    <p class="stext-111  p-t-2"><strong>Telefono: </strong> @ViewBag.Venta.Usuarios_Direcciones.Recibe_Telefono - @ViewBag.Venta.Usuarios_Direcciones.Recibe_TipoTelefono</p>
                                }

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class=" col-sm-1">
            </div>

            <div class=" bor15 col-sm-6" style="border-top: 1px solid #e6e6e6; border-radius: 5px; ">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <br />
                        <h1 style="font-size: 18px; color: #403f3f;"><strong> Método de pago  :  </strong>  @ViewBag.Venta.Cat_MetodoPago.Nombre</h1>
                        <br />
                        <h1 style="font-size: 18px; color: #403f3f;"><strong> Referencia   :  </strong>  @ViewBag.Venta.Venta.Referencia</h1>
                        <br />
                        <h1 style="font-size: 18px; color: #403f3f;"><strong> Estatus   :  </strong>  @ViewBag.Venta.Cat_EstatusVenta.Nombre</h1>
