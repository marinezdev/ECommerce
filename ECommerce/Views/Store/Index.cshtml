
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/assets/galeria/css/slick-theme.css" rel="stylesheet" />
<link href="~/assets/galeria/css/slick.css" rel="stylesheet" />
<link href="~/assets/galeria/css/style.css" rel="stylesheet" />
@*<link href="~/assets/galeria/css/style.css" rel="stylesheet" />*@
<style>
    .store-sort {
        display: inline-block;
        width: 70%;
    }

    .input-select {
    padding: 0px 10px;
    background: #FFF;
    border: 0px solid #E4E7ED;
    height: 35px;
}

    .product .product-body .product-name {
        text-transform: initial;
        font-size: 14px;
        color: #6c6c6c;
    }


    .product-btns > button {
        position: relative;
        width: 40px;
        height: 40px;
        line-height: 40px;
        border-radius: 50%;
        background: white;
        border: none;
        -webkit-transition: 0.2s all;
        transition: 0.2s all;
    }

    .product-label > span.new {
        background: linear-gradient(to right, #2196f3, #4947a4);
        border-color: #f8f9fa;
        color: #ffffff;
        border-radius: 4px;
    }

    .store-grid li.active {
        background-color: #b0cd68;
        border-color: #cbdd99;
        color: #FFF;
        cursor: default;
    }

    .store-pagination li.active {
        background-color: #afce68;
        border-color: #cbdd9a;
        color: #FFF;
        font-weight: 500;
        cursor: default;
    }

</style>


<br />
<br />
<br />
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <div class="bread-crumb flex-w p-lr-0-lg">
            <a href="index.html" class="stext-109 ">
                Inicio
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>
            <a href="index.html" class="stext-109 ">
                Tienda
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>
            @*<span>
                contenido html URL
            </span>*@
        </div>
        <hr>
        <div class="row">
            <div id="aside" class="col-md-2">
                <div class="aside">
                    <h3 class="aside-title">Categorías </h3>
                </div>
            </div>
            <!-- STORE -->
            <div id="store" class="col-md-10">
                <!-- store top filter -->
                <div class="store-filter clearfix">
                    <div class="store-sort">
                        <div class="row">
                            <label style="border-right: 1px solid #e5e5e5;">
                                Ordenar por:
                                <select class="input-select">
                                    <option value="0">Popular </option>
                                    <option value="1">Posición </option>
                                </select> &nbsp;
                            </label>
                            <label style="border-right: 1px solid #e5e5e5;">
                                Mostrar :
                                <select class="input-select">
                                    <option value="0">20</option>
                                    <option value="1">50</option>
                                    <option value="1">100</option>
                                </select> &nbsp;
                            </label>
                            <label style="border-right: 1px solid #e5e5e5;">
                                Columnas :
                                <select class="input-select">
                                    <option value="0">4</option>
                                    <option value="1">3</option>
                                </select> &nbsp;
                            </label>
                        </div>
                    </div>
                    <ul class="store-grid">
                        <li class="active"><i class="fa fa-th"></i></li>
                        <li><a href="#"><i class="fa fa-th-list"></i></a></li>
                    </ul>
                </div>
                <!-- store products -->
                <div class="row" id="ArticulosContenido">
                    @{ 
                        foreach (var Dat in ViewBag.Articulos)
                        {
                            <div class="col-md-3 col-xs-6">
                                <div class="product">
                                    <div class="product-img" >
                                        <img src="http://@Dat.Imagen" onclick="ConsultaArticulo(@Dat.Id)"/>
                                        <div class="product-label">
                                            <div class="product-btns">
                                                <button class="add-to-wishlist" onclick="Interes(@Dat.Id);"><i class="fa fa-heart-o"></i><span class="tooltipp">Añadir interés </span></button>
                                            </div>
                                        </div>
                                                               
                                    </div>
                                         
                                    <div class="product-body" onclick="ConsultaArticulo(@Dat.Id)">
                                        <div class="product-label text-right">
                                            @*<span class="sale">-30%</span>*@
                                            <span class="new">NUEVO  </span>
                                        </div>
                                        <br />
                                        <p class="product-category">@Dat.Clasificacion</p>
                                        <h3 class="product-name"><a href="#" style="color:#6c6c6c;">@Dat.Nombre</a></h3>


                                        <h4 class="product-price" style="color: #484aa7">@Dat.PrecioText  <span style="font-size:12px;"> @Dat.Moneda</span> </h4>
                                    </div>
                                    <div class="add-to-cart">
                                        <button class="add-to-cart-btn" type="submit" onclick="AgregarCarrito(@Dat.Id);">
                                            <i class="fa fa-shopping-cart"></i> Comprar
                                        </button>
                                    </div>
                                </div>
                            </div>
                            }
                        }
                </div>
                <!-- store bottom filter -->
                <div class="store-filter clearfix">
                    <span class="store-qty">
                        MOSTRANDO 20-100 PRODUCTOS
                    </span>
                    <ul class="store-pagination">
                        <li class="active">1</li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </div>
                <!-- /store bottom filter -->
            </div>
        </div>
    </div>
    <div class="container">

    </div>
</div>






