<script src="~/assets/js/bootstrap-notify.js"></script>

<script>

    function ConsultaArticulo(num) {
        window.location = '@Url.Action("ArticuloDetalle", "Store")?Arti=' + num;
    }

    function Interes(num) {
        alert(num);
    }


    function AgregarCarrito(IdArticulo)
    {
        var obj = {};
        obj['IdArticulo'] = IdArticulo;
        obj['Item'] = 1;
        var jsonObject = {
            "Carro_Electronico": obj
        };

        $.ajax({
            url: "@Url.Action("Agregar_Carrito", "Store")",
            type: "POST",
            data: JSON.stringify(jsonObject),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            error: function (response) {
                alert("MANDAR MENSAJE SE ERROR");
            },
            success: function (response) {
                if (response.Respuesta) {
                    swal({
                        title: "Agregado a carrito !",
                        text: response.RespuestaText,
                        icon: "success",
                        button: "Aceptar",
                    });
                    //alert(response.Contenido);
                    $('#BtCartShowp').attr('data-notify', response.Contenido);
                }
                else {
                    swal({
                        title: "Algo ocurrió !",
                        text: response.RespuestaText,
                        icon: "warning",
                        button: "Aceptar",
                    });
                }
            }
        });
    }



</script>